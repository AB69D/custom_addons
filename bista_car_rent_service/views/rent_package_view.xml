<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rent_package_form_view" model="ir.ui.view">
            <field name="name">rent.package.form</field>
            <field name="model">rent.package</field>
            <field name="arch" type="xml">
                <form create="1" save="1">
                <sheet>
                    <group>
                        <group name="name" string="Rent Deatails">
                            <field name="name"/>
                            <field name="day"/>
                            <field name="active"/>
                        </group> 
                        <group name="amount" string="Amount">
                            <field name="currency_id" invisible="1"/>
                            <field name="rent_amount" />
                        </group>      
                    </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="rent_package_tree_view" model="ir.ui.view">
                <field name="name">rent.package.tree</field>
                <field name="model">rent.package</field>
                <field name="arch" type="xml">
                <tree create = "1">
                        <field name="name"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="rent_amount" />
                        <field name="active"/>
                </tree>                    
                </field>
        </record>



        <record id="action_rent_package" model="ir.actions.act_window">
            <field name="name">Rent Package </field>
            <field name="res_model">rent.package</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
