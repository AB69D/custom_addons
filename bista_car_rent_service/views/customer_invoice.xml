<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="customer_invoice_form_view" model="ir.ui.view">
            <field name="name">customer.invoice.form</field>
            <field name="model">customer.invoice</field>
            <field name="arch" type="xml">
                <form create="1" save="1">
                <header>
                    <button string="Pay Due Amount" name="due_payment" type="object" class="oe_highlight" states="validation"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                <widget name="web_ribbon" title="Paid" attrs="{'invisible': [('state', '!=', 'paid')]}"/>
                    <group>

                        <group name="Customer" string="Customer">
                            <field name="customer"/>
                            <field name="source_doc"/> 
                            <field name="total_rent"/>
                             
                        </group>
                        <group name="" string="">
                            <field name="invoice_date"/>
                            <field name="due_date"/> 
                            <field name="currency_id" invisible="1"/> 
                        </group>
                  
                    </group>
                    <notebook>
                        <page name="AMounts" string="Amounts">
                            <field name="amount_line_ids">
                                <tree editable="bottom" create="1">
                                    <field name="payment_type"/>
                                    <field name="qty"/>
                                    <field name="down_payment" sum="Total payment"/>
                                    <field name="currency_id" invisible="1"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <group>
                            
                        </group>
                        <group>
                            <group>
                                
                            </group>
                            <group>

                            </group>
                            <group>

                            </group>
                            <group>
                                <field name="due_amount" states='validation'/>
                            </group>
                        </group>
                    </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_invoice_tree_view" model="ir.ui.view">
                <field name="name">customer.invoice.tree</field>
                <field name="model">customer.invoice</field>
                <field name="arch" type="xml">
                <tree create = "1">
                        <field name="customer"/>              
                        <field name="invoice_date"/>              
                        <field name="due_date"/>  
                        <field name="total_rent"/>
                        <field name="currency_id" invisible="1"/>
            
                </tree>                    
                </field>
        </record>



        <record id="action_customer_invoice" model="ir.actions.act_window">
            <field name="name">Invoice</field>
            <field name="res_model">customer.invoice</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
