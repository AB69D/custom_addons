<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="down_payment_wizard_view" model="ir.ui.view">
            <field name="name">down.payment.form</field>
            <field name="model">down.payment</field>
            <field name="arch" type="xml">
                <form create="1" save="1">
                    <sheet>
                        <group>  
                            <group name="name" string="Payment Mode">
                                <field name="sourch_doc" />
                                <field name="down_payment" />
                                <field name="due_amount" />
                            </group>       
                        </group>
                        <footer>
                            <button string="submit" class="btn-primary" name="get_paid" type="object"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_down_payment" model="ir.actions.act_window">
            <field name="name">Down Payment </field>
            <field name="res_model">down.payment</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>

    </data>
</odoo>
